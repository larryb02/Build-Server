{
    "dockerComposeFile": "docker-compose.yml",
    "service": "dev",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": { "moby": false},
        "ghcr.io/devcontainers/features/terraform:1": {},
        "ghcr.io/devcontainers-extra/features/ansible": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.pylint",
                "redhat.vscode-yaml",
                "docker.docker",
                "hashicorp.terraform",
                "redhat.ansible"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python"
            }
        }
    },
    "remoteEnv": {
        "PYTHONPATH": "${containerWorkspaceFolder}:${containerEnv:PYTHONPATH}"
    },
    "postCreateCommand": "pip install -e ./buildserver-api[test] -e ./buildserver-runner[test] && pip install pylint pre-commit && pre-commit install"
}
